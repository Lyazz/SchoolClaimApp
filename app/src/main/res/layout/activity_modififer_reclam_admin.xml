<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModififerReclamAdmin">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Ecrivez ci-dessous le nouveau contenu de la reclamation:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editext"
        android:layout_width="280dp"
        android:layout_height="195dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Le nouveau contenu de la reclamation..."
        android:inputType="text|textMultiLine|textCapSentences"
        android:lines="10"
        android:maxLines="15"
        android:minLines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button4"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="153dp"
        android:layout_height="39dp"
        android:background="@drawable/valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editext"
        app:layout_constraintVertical_bias="0.502" />
    />
</android.support.constraint.ConstraintLayout>